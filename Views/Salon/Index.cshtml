@model IEnumerable<GokhanOzgunerWEB.Models.Salon>

@{
    ViewData["Title"] = "Salonlar";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-building"></i> Salonlar</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Salon Ekle
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Salon Adı</th>
                        <th>Adres</th>
                        <th>Çalışma Saatleri</th>
                        <th>Telefon</th>
                        <th>Antrenör Sayısı</th>
                        <th>Hizmet Sayısı</th>
                        <th>Durum</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Ad</strong></td>
                            <td>@(item.Adres ?? "-")</td>
                            <td>
                                <small>
                                    <i class="bi bi-clock"></i> 
                                    @item.AcilisSaati.ToString(@"hh\:mm") - @item.KapanisSaati.ToString(@"hh\:mm")
                                </small>
                            </td>
                            <td>@(item.Telefon ?? "-")</td>
                            <td>
                                <span class="badge bg-info">@item.Antrenorler.Count</span>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@item.Hizmetler.Count</span>
                            </td>
                            <td>
                                @if (item.Aktif)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Pasif</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Detaylar">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Düzenle">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Sil">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <p class="text-muted mt-3">Henüz salon eklenmemiş.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> İlk Salonu Ekle
                </a>
            </div>
        }
    </div>
</div>