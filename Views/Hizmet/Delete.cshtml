@model GokhanOzgunerWEB.Models.Hizmet

@{
    ViewData["Title"] = "Hizmet Sil";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Hizmet Sil</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <strong>Uyarı!</strong> Bu hizmeti silmek istediğinizden emin misiniz?
                </div>

                <dl class="row">
                    <dt class="col-sm-3">Hizmet Adı</dt>
                    <dd class="col-sm-9">@Model.Ad</dd>

                    <dt class="col-sm-3">Salon</dt>
                    <dd class="col-sm-9">@Model.Salon?.Ad</dd>

                    <dt class="col-sm-3">Açıklama</dt>
                    <dd class="col-sm-9">@(Model.Aciklama ?? "-")</dd>

                    <dt class="col-sm-3">Süre</dt>
                    <dd class="col-sm-9">@Model.Sure dakika</dd>

                    <dt class="col-sm-3">Ücret</dt>
                    <dd class="col-sm-9">
                        <strong class="text-success">@Model.Ucret.ToString("C2")</strong>
                    </dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Evet, Sil
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>