@model GokhanOzgunerWEB.Models.Hizmet

@{
    ViewData["Title"] = "Hizmet Düzenle";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-warning">
                <h4 class="mb-0"><i class="bi bi-pencil"></i> Hizmet Düzenle</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Ad" class="form-label"></label>
                        <input asp-for="Ad" class="form-control" />
                        <span asp-validation-for="Ad" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SalonId" class="form-label">Salon</label>
                        <select asp-for="SalonId" class="form-select" asp-items="ViewBag.SalonId"></select>
                        <span asp-validation-for="SalonId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Aciklama" class="form-label"></label>
                        <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Aciklama" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Sure" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Sure" class="form-control" />
                                <span class="input-group-text">dakika</span>
                            </div>
                            <span asp-validation-for="Sure" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Ucret" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Ucret" class="form-control" />
                                <span class="input-group-text">₺</span>
                            </div>
                            <span asp-validation-for="Ucret" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="Aktif" class="form-check-input" />
                        <label asp-for="Aktif" class="form-check-label"></label>
                    </div>

                    <hr>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-save"></i> Güncelle
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}