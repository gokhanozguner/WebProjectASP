@model GokhanOzgunerWEB.Models.Hizmet

@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-card-list"></i> Yeni Hizmet Ekle</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Ad" class="form-label"></label>
                        <input asp-for="Ad" class="form-control" placeholder="Örn: Fitness, Yoga, Pilates" />
                        <span asp-validation-for="Ad" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SalonId" class="form-label">Salon</label>
                        <select asp-for="SalonId" class="form-select" asp-items="ViewBag.SalonId">
                            <option value="">-- Salon Seçin --</option>
                        </select>
                        <span asp-validation-for="SalonId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Aciklama" class="form-label"></label>
                        <textarea asp-for="Aciklama" class="form-control" rows="3" placeholder="Hizmet açıklaması"></textarea>
                        <span asp-validation-for="Aciklama" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Sure" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Sure" class="form-control" placeholder="60" />
                                <span class="input-group-text">dakika</span>
                            </div>
                            <span asp-validation-for="Sure" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Ucret" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Ucret" class="form-control" placeholder="500" />
                                <span class="input-group-text">₺</span>
                            </div>
                            <span asp-validation-for="Ucret" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="Aktif" class="form-check-input" checked />
                        <label asp-for="Aktif" class="form-check-label"></label>
                    </div>

                    <hr>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Kaydet
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}