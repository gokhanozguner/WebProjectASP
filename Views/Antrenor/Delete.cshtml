@model GokhanOzgunerWEB.Models.Antrenor

@{
    ViewData["Title"] = "Antrenör Sil";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Antrenör Sil</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <strong>Uyarı!</strong> Bu antrenörü silmek istediğinizden emin misiniz?
                </div>

                <dl class="row">
                    <dt class="col-sm-3">Ad Soyad</dt>
                    <dd class="col-sm-9">@Model.AdSoyad</dd>

                    <dt class="col-sm-3">Salon</dt>
                    <dd class="col-sm-9">@Model.Salon?.Ad</dd>

                    <dt class="col-sm-3">Uzmanlık Alanları</dt>
                    <dd class="col-sm-9">@(Model.UzmanlikAlanlari ?? "-")</dd>

                    <dt class="col-sm-3">Telefon</dt>
                    <dd class="col-sm-9">@(Model.Telefon ?? "-")</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@(Model.Email ?? "-")</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Evet, Sil
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>